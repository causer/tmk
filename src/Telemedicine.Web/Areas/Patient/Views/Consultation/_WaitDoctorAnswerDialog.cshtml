@model Telemedicine.Web.Areas.Patient.Models.ChatDialogViewModel
     
<div class="modal-header">
    <h3>Начать консультацию</h3>
</div>

<div class="modal-body">
    @Model.DoctorDisplayName <br/>
    @Model.Specialization
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-success" data-loading-text="Вызов доктора..." id="callToDoctorBtn" onclick="callToDoctor('@Model.DoctorUserId')">Начать консультацию</button> 
    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="cancelCall()">Отмена</button>
</div>
